[user]
    name = Em Lowing

[includeIf "gitdir:~/code/work/"]
    path = ~/code/work/.gitconfig
[includeIf "gitdir:~/code/play/"]
    path = ~/code/play/.gitconfig

[branch]
    sort = commiterdate
[commit]
    verbose = true
[core]
    editor = code --wait
	pager = "diff-so-fancy | less --tabs=4 -RFX"
[credential]
    helper = osxkeychain
[diff]
    algorithm = histogram
[fetch]
    prune = true
    pruneTags = true
[help]
    autocorrect = prompt
[init]
    defaultBranch = main
[interactive]
	diffFilter = "diff-so-fancy --patch"
[merge]
    conflictStyle = zdiff3
[push]
	default = current
    followTags = true
[rebase]
    autostash = true
    updateRefs = true