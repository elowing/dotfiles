alias ga="git add"
alias gap="git add -p"
alias gb="git branch"
alias gbd="git branch -d"
alias gc="git commit"
alias gcan="git commit --amend --no-edit"
alias gcm="git commit -m $1"
alias gd="git diff"
alias gdc="git diff --cached"
alias gl="git log --graph --no-merges --date=format:'%b %d %Y' --format='%C(bold yellow)%h %Cblue%ad %C(auto)%s %C(bold magenta)%aN %C(auto)%d'"
alias gpr="git pull --rebase"
alias gp="git push"
alias gr="git restore $1"
alias gri="git rebase -i $1"
alias gs="git status"
alias gsw="git switch $1"
alias gsc="git switch -c $1"

alias ag="rg"
alias cdiff="colordiff"
alias cm="chezmoi"
alias sl="eza -ahlF --color-scale --icons --group-directories-first"
alias rmi="rm -i"
alias td="termdown -asWT StrategyLift" # colon-separated, no seconds, don't update window title, text above timer