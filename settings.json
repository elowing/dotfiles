{
	"editor.accessibilitySupport": "off",
	"editor.cursorStyle": "block",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"editor.renderLineHighlight": "none",
	"editor.renderWhitespace": "boundary",
	"files.autoSave": "onFocusChange",
	"gitlens.codeLens.scopes": ["document", "containers", "blocks"],
	"[ruby]": {
		"ruby.useLanguageServer": true
	},
	"security.workspace.trust.untrustedFiles": "open",
	"terminal.integrated.confirmOnExit": "always",
	"terminal.integrated.confirmOnKill": "always",
	"terminal.integrated.copyOnSelection": true,
	"terminal.integrated.cwd": "${cwd}",
	"terminal.integrated.defaultLocation": "editor",
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.enableBell": true,
	"terminal.integrated.enableMultiLinePasteWarning": false,
	"terminal.integrated.env.osx": {
		"VAULT_ADDR": "https://or.vault.comcast.com"
	},
	"terminal.integrated.fontFamily": "MesloLGS NF",
	"terminal.integrated.showExitAlert": false,
	"terminal.integrated.tabs.focusMode": "singleClick",
	"vim.hlsearch": true,
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["<Esc>"],
			"commands": [":nohl"]
		}
	],
	"vsicons.dontShowNewVersionMessage": true,
	"window.autoDetectColorScheme": true,
	"workbench.colorCustomizations": {
		"editor.findMatchBackground": "#00cc44a8",
		"editor.findMatchHighlightBackground": "#ff7b00a1",
		"editor.selectionBackground": "#e788ff7c",
		"editor.selectionHighlightBackground": "#ff00005b"
	},
	"workbench.colorTheme": "One Dark Pro",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.preferredDarkColorTheme": "One Dark Pro",
	"editor.multiCursorModifier": "ctrlCmd",
	"prettier.semi": false,
	"prettier.useTabs": true,
	"editor.occurrencesHighlight": "off"
}
